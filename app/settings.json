{
  "public": {
    "blog": {
      "name": "Xolv.io MD-Blog",
      "description": "A WYSIWYG Markdown blog for your Meteor app.",
      "prettify": {
        "syntax-highlighting": true,
        "element-classes": [
          {
            "locator": "img",
            "classes": ["pure-img"]
          },
          {
            "locator": "button",
            "classes": ["pure-button"]
          }
        ]
      },
      "sortBy": {"date": -1},
      "blogPath": "/blog",
      "archivePath": "/blog/archive",
      "useUniqueBlogPostsPath": true,
      "locale": "en",
      "moment": {
        "calendar": {
          "lastDay": "[yesterday at] LT",
          "sameDay": "[today at] LT",
          "nextDay": "[tomorrow at] LT",
          "lastWeek": "[last] dddd [at] LT",
          "nextWeek": "dddd [at] LT",
          "sameElse": "on L"
        }
      }
    }
  }
}
